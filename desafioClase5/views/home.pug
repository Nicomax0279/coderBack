html 
    head 
        title Formulario
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")    
    body(class="container")
        h1 Formulario
        form(action="/api/products" method="post" class="container col-sm-8")
            div(class="form-group")
                label nombre 
                input(input type="text" class="form-control"   name="title" placeholder="calculadora")
            div(class="form-group")
                label precios
                input(input type="text" class="form-control" name="price" placeholder="145")
            div(class="form-group")
                label url imagen 
                input(type="text" class="form-control"  name="thumbnail" placeholder="foto.png")
            button(type="submit" class="btn btn-primary") submit 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
        a(href="/api/products" class="btn btn-primary") Tabla
    